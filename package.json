{
  "name": "mnml-app",
  "version": "1.0.0",
  "main": "main.js",
  "description": "Minimal Chat Application",
  "author": "Matthew Mihok <matthew@minimal.chat>",
  "private": true,
  "license": "UNLICENSED",
  "repository": "minimalchat/mnml-app.git",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "coverage": "jest --coverage && cat coverage/lcov.info | coveralls",
    "lint": "eslint src --ext .js,.jsx",
    "build": "webpack --progress --colors",
    "build:watch": "webpack --progress --colors --watch",
    "start": "electron ."
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/webpack*.js",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/coverage/**",
      "!**/test/**"
    ],
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "coverageDirectory": "coverage",
    "testRegex": "(/test/.*|\\.(test|spec))\\.(js|jsx)$"
  },
  "devDependencies": {
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.0",
    "babel-loader": "^6.2.10",
    "babel-plugin-istanbul": "^2.0.3",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "@blueprintjs/core": "^1.6.0",
    "@blueprintjs/datetime": "^1.5.0",
    "@blueprintjs/table": "^1.3.0",
    "coveralls": "^2.11.14",
    "electron": "^1.4.1",
    "enzyme": "^2.6.0",
    "eslint": "^3.10.0",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.6.0",
    "jest": "^18.1.0",
    "jest-enzyme": "^2.0.0",
    "react": "^15.3.2",
    "react-addons-css-transition-group": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-redux": "^4.4.5",
    "redux": "^3.6.0",
    "webpack": "^2.2.0"
  }
}
